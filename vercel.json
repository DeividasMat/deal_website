{
  "functions": {
    "app/api/*/route.ts": {
      "maxDuration": 300
    }
  },
  "env": {
    "DATABASE_PATH": "./tmp/database.sqlite"
  },
  "crons": [
    {
      "path": "/api/cron/daily-news",
      "schedule": "0 8,12,17 * * *"
    },
    {
      "path": "/api/cron/smart-duplicate-cleanup",
      "schedule": "30 17 * * *"
    }
  ]
} 